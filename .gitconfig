[alias]
    graph = log --graph --date=short --pretty=\"format:%C(yellow)%h %C(cyan)%ad %C(green)%an%Creset%x09%s %C(red)%d%Creset\"
    plog = log --pretty='format:%C(yellow)%h %C(green)%cd %C(reset)%s %C(red)%d %C(cyan)[%an]' --date=iso
    plog-name-status = log --pretty='format:%C(yellow)%h %C(green)%cd %C(reset)%s %C(red)%d %C(cyan)[%an]' --date=iso --name-status
    st = status
    co = checkout
    cm = commit
    diff1 = diff "HEAD^"
    
[push]
    default = current
[pull]
    ff = only
[color]
    ui = true
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
        ff = false
	tool = vimdiff
[mergetool]
	prompt = false
	keepBackup = false
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[ghq]
	root = /home/ubuntu/dev
[delta]
    diff-so-fancy = true
    keep-plus-minus-markers = true
    minus-emph-style = "bold white 89"
    plus-emph-style = "bold white 21"
    hunk-header-style = "omit"
    line-numbers = true

[include]
    path = ~/.gitconfig_after
